  author = {Thuiller, Wilfried and M{\"u}nkem{\"u}ller, Tamara and Lavergne, S{\'e}bastien and Mouillot, David and Mouquet, Nicolas and Schiffers, Katja and Gravel, Dominique},
  year = {2013},
