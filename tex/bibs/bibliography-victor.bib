}

@article{snell2014,
  title = {Using Dynamic Vegetation Models to Simulate Plant Range Shifts},
  author = {Snell, R. S. and Huth, A. and Nabel, J. E. M. S. and Bocedi, G. and Travis, J. M. J. and Gravel, D. and Bugmann, H. and Guti{\'e}rrez, A. G. and Hickler, T. and Higgins, S. I. and Reineking, B. and Scherstjanoi, M. and Zurbriggen, N. and Lischke, H.},
