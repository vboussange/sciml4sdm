}

@article{Waldock2019,
  title = {The Shape of Abundance Distributions across Temperature Gradients in Reef Fishes},
  author = {Waldock, Conor and Stuart-Smith, Rick D. and Edgar, Graham J. and Bird, Tomas J. and Bates, Amanda E.},
