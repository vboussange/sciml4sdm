@incollection{Baake1999,
  title = {{{BIOLOGICAL EVOLUTION THROUGH MUTATION}}, {{SELECTION}}, {{AND DRIFT}}: {{AN INTRODUCTORY REVIEW}}},
  booktitle = {Annual {{Reviews}} of {{Computational Physics VII}}},
  author = {BAAKE, {\relax ELLEN} and GABRIEL, {\relax WILFRIED}},
