  abstract = {Using the most comprehensive fish occurrence database, we evaluated the importance of ecological and historical drivers in diversity patterns of subdrainage basins across the Amazon system. Linear models reveal the influence of climatic conditions, habitat size and sub-basin isolation on species diversity. Unexpectedly, the species richness model also highlighted a negative upriver-downriver gradient, contrary to predictions of increasing richness at more downriver locations along fluvial gradients. This reverse gradient may be linked to the history of the Amazon drainage network, which, after isolation as western and eastern basins throughout the Miocene, only began flowing eastward 1--9 million years (Ma) ago. Our results suggest that the main center of fish diversity was located westward, with fish dispersal progressing eastward after the basins were united and the Amazon River assumed its modern course toward the Atlantic. This dispersal process seems not yet achieved, suggesting a recent formation of the current Amazon system.},
  pmid = {31535018}
}

@article{Oborny2009,
  title = {Metapopulation Dynamics across Gradients - {{The}} Relation between Colonization and Extinction in Shaping the Range Edge},
  author = {Oborny, Be{\'a}ta and Vukov, Jeromos and Cs{\'a}nyi, G{\'a}bor and Mesz{\'e}na, G{\'e}za},
  year = {2009},
  journal = {Oikos},
  volume = {118},
  number = {10},
  pages = {1453--1460},
  issn = {00301299},
  doi = {10.1111/j.1600-0706.2009.17158.x},
  abstract = {We study the dynamics of a metapopulation in which the rates of colonization{\textbackslash}nand/or extinction change along an environmental gradient. Spatially{\textbackslash}nexplicit simulations are applied to compare two cases: in parent-dependent{\textbackslash}ncolonization (PDC) the rate of colonization is limited by the production{\textbackslash}nof new individuals; in offspring-dependent colonization (ODC) it{\textbackslash}nis limited by the success of establishment of the offspring. Thus,{\textbackslash}nPDC depends on the quality of the parent's site, while ODC is dependent{\textbackslash}non the offspring's site. We combine PDC and ODC in a spatially implicit{\textbackslash}nmodel. We study the steady-state distribution of a metapopulation,{\textbackslash}nand ask whether the local densities of occupied sites at each position{\textbackslash}nx along the gradient could be predicted from the local rates of colonization{\textbackslash}nc(x) and extinction e(x). This prediction is not trivial, since the{\textbackslash}nsites are connected, enabling a flow of individuals from more favorable{\textbackslash}nto less favorable sites. The results show that at ODC a single parameter,{\textbackslash}nc(x)/e(x), is sufficient for the prediction. Therefore, different{\textbackslash}nspecies and geographic regions can be directly compared by appropriate{\textbackslash}nrescaling: choosing the local average lifetime of occupancy, 1/e(x),{\textbackslash}nfor a time unit at each point along the gradient. This permits generalizations{\textbackslash}nabout the shape of range edges, and can help to predict the position{\textbackslash}nof the boundary of a species' distribution. At PDC, rescaling is{\textbackslash}nnot possible: the whole profile of c(x) and e(x) along the gradient{\textbackslash}nhas to be taken into consideration. Nevertheless, rescaling gives{\textbackslash}na good approximation when the parent-dependent component of colonization{\textbackslash}ndoes not change abruptly across space.},
