@article{Kaheman2020,
  title = {{{SINDy-PI}}: {{A}} Robust Algorithm for Parallel Implicit Sparse Identification of Nonlinear Dynamics: {{SINDy-PI}}},
  author = {Kaheman, Kadierdan and Kutz, J. Nathan and Brunton, Steven L.},
