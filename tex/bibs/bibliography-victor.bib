@article{matias2014,
  title = {Estimates of Species Extinctions from Species--Area Relationships Strongly Depend on Ecological Context},
  author = {Matias, Miguel G. and Gravel, Dominique and Guilhaumon, Fran{\c c}ois and {Desjardins-Proulx}, Philippe and Loreau, Michel and M{\"u}nkem{\"u}ller, Tamara and Mouquet, Nicolas},
  year = {2014},
