@article{Falster2017,
  title = {Multitrait Successional Forest Dynamics Enable Diverse Competitive Coexistence},
  author = {Falster, Daniel S. and Br{\"a}nnstr{\"o}m, {\AA}ke and Westoby, Mark and Dieckmann, Ulf},
  year = {2017},
