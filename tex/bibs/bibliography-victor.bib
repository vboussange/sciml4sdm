@article{Kobayashi2016,
  title = {Population Size vs. Social Connectedness --- {{A}} Gene-Culture Coevolutionary Approach to Cumulative Cultural Evolution},
  author = {Kobayashi, Yutaka and Ohtsuki, Hisashi and Wakano, Joe Y.},
