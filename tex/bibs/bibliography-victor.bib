@article{Pagel2007,
  title = {Frequency of Word-Use Predicts Rates of Lexical Evolution throughout {{Indo-European}} History},
  author = {Pagel, Mark and Atkinson, Q. D. and Meade, Andrew},
  year = {2007},
  journal = {Nature},
  volume = {449},
