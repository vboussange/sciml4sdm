  author = {Titeux, Nicolas and Henle, Klaus and Mihoub, Jean-Baptiste and Regos, Adri{\'a}n and Geijzendorffer, Ilse R. and Cramer, Wolfgang and Verburg, Peter H. and Brotons, Llu{\'i}s},
