@article{Yukalov2014,
  title = {Population {{Dynamics}} with {{Nonlinear Delayed Carrying Capacity}}},
  author = {Yukalov, V. I. and Yukalova, E. P. and Sornette, D.},
  year = {2014},
  journal = {International Journal of Bifurcation and Chaos},
  volume = {24},
  number = {02},
  eprint = {1403.2051},
