@article{Carrassi2018,
  title = {Data Assimilation in the Geosciences: {{An}} Overview of Methods, Issues, and Perspectives},
  author = {Carrassi, Alberto and Bocquet, Marc and Bertino, Laurent and Evensen, Geir},
  year = {2018},
