@article{Black1998,
  title = {Venture Capital and the Structure of Capital Markets: Banks versus Stock {{markets1The}} Authors Are Grateful for Helpful Suggestions from the Editor and an Anonymous Referee, and from {{Anant Admati}}, {{Erik Berglof}}, {{Stephen Choi}}, {{Kevin Davis}}, {{Uri Geiger}}, {{Victor}}},
