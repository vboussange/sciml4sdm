@article{shoemaker2020,
  title = {Integrating the Underlying Structure of Stochasticity into Community Ecology},
  author = {Shoemaker, Lauren G. and Sullivan, Lauren L. and Donohue, Ian and Cabral, Juliano S. and Williams, Ryan J. and Mayfield, Margaret M. and Chase, Jonathan M. and Chu, Chengjin and Harpole, W. Stanley and Huth, Andreas and HilleRisLambers, Janneke and James, Aubrie R. M. and Kraft, Nathan J. B. and May, Felix and Muthukrishnan, Ranjan and Satterlee, Sean and Taubert, Franziska and Wang, Xugao and Wiegand, Thorsten and Yang, Qiang and Abbott, Karen C.},
