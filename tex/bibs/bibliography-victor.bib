@article{veveakis2017,
  title = {Episodic {{Tremor}} and {{Slip}} ({{ETS}}) as a Chaotic Multiphysics Spring},
  author = {Veveakis, E. and Alevizos, S. and Poulet, T.},
  year = {2017},
