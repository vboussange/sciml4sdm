@article{Hindersin2019,
  title = {Computation and {{Simulation}} of {{Evolutionary Game Dynamics}} in {{Finite Populations}}},
  author = {Hindersin, Laura and Wu, Bin and Traulsen, Arne and Garc{\'i}a, Julian},
  year = {2019},
  journal = {Scientific Reports},
  volume = {9},
  number = {1},
