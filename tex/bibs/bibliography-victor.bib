@article{Allesina2015,
  title = {Predicting the Stability of Large Structured Food Webs},
  author = {Allesina, Stefano and Grilli, Jacopo and Barab{\'a}s, Gy{\"o}rgy and Tang, Si and Aljadeff, Johnatan and Maritan, Amos},
