@article{macel2017,
  title = {Evolutionary Responses to Climate Change in a Range Expanding Plant},
  author = {Macel, Mirka and Dost{\'a}lek, Tom{\'a}{\v s} and Esch, Sonja and Bucharov{\'a}, Anna and {van Dam}, Nicole M. and Tielb{\"o}rger, Katja and Verhoeven, Koen J. F. and M{\"u}nzbergov{\'a}, Zuzana},
  year = {2017},
