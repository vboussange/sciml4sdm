@article{Ye2015,
  title = {Equation-Free Mechanistic Ecosystem Forecasting Using Empirical Dynamic Modeling},
  author = {Ye, Hao and Beamish, Richard J. and Glaser, Sarah M. and Grant, Sue C. H. and Hsieh, Chih-hao and Richards, Laura J. and Schnute, Jon T. and Sugihara, George},
