@article{Thomas2001,
  title = {Ecological and Evolutionary Processes at Expanding Range Margins},
  author = {Thomas, C. D. and Bodsworth, E. J. and Wilson, R. J. and Simmons, A. D. and Davies, Z. G. and Musche, M. and Conradt, L.},
  year = {2001},
