@article{Billiard2015,
  title = {Stochastic Dynamics of Adaptive Trait and Neutral Marker Driven by Eco-Evolutionary Feedbacks},
  author = {Billiard, Sylvain and Ferri{\`e}re, R{\'e}gis and M{\'e}l{\'e}ard, Sylvie and Tran, Viet Chi},
  year = {2015},
  month = nov,
  journal = {Journal of Mathematical Biology},
  volume = {71},
