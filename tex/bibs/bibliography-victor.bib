@article{botella2022,
  title = {Dynamic {{Species Distribution Modeling Reveals}} the {{Pivotal Role}} of {{Human-Mediated Long-Distance Dispersal}} in {{Plant Invasion}}},
  author = {Botella, Christophe and Bonnet, Pierre and Hui, Cang and Joly, Alexis and Richardson, David M.},
  year = {2022},
  month = sep,
  journal = {Biology},
  volume = {11},
