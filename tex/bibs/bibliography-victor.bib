@article{Hens2005,
  title = {An {{Application}} of {{Evolutionary Finance}} to {{Firms Listed}} in the {{Swiss Market Index}}},
  author = {Hens, Thorsten and {Schenk-Hopp{\'e}}, Klaus Reiner Reiner and Stalder, Martin},
