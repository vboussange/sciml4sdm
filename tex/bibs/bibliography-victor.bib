@article{Lombaert2014,
  title = {Rapid Increase in Dispersal during Range Expansion in the Invasive Ladybird {{Harmonia}} Axyridis},
  author = {Lombaert, E. and Estoup, A. and Facon, B. and Joubard, B. and Gr{\'e}goire, J.-C. and Jannin, A. and Blin, A. and Guillemaud, T.},
