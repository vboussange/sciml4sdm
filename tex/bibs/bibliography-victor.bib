@article{paniw2023,
  title = {Pathways to Global-Change Effects on Biodiversity: New Opportunities for Dynamically Forecasting Demography and Species Interactions},
  shorttitle = {Pathways to Global-Change Effects on Biodiversity},
  author = {Paniw, Maria and {Garc{\'i}a-Callejas}, David and Lloret, Francisco and Bassar, Ronald D. and Travis, Joseph and Godoy, Oscar},
  year = {2023},
