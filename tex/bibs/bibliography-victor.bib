  author = {Geary, William L. and Bode, Michael and Doherty, Tim S. and Fulton, Elizabeth A. and Nimmo, Dale G. and Tulloch, Ayesha I. T. and Tulloch, Vivitskaia J. D. and Ritchie, Euan G.},
