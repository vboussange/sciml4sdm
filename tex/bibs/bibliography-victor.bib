  author = {{Jim{\'e}nez-Alfaro}, Borja and Girardello, Marco and Chytr{\'y}, Milan and Svenning, Jens-Christian and Willner, Wolfgang and G{\'e}gout, Jean-Claude and Agrillo, Emiliano and Campos, Juan Antonio and Jandt, Ute and K{\k a}cki, Zygmunt and {\v S}ilc, Urban and Slez{\'a}k, Michal and Tich{\'y}, Lubom{\'i}r and Tsiripidis, Ioannis and Turtureanu, Pavel Dan and Ujh{\'a}zyov{\'a}, Mariana and Wohlgemuth, Thomas},
  year = {2018},
