}

@article{Lu2021,
  title = {{{DeepXDE}}: {{A}} Deep Learning Library for Solving Differential Equations},
  author = {Lu, Lu and Meng, Xuhui and Mao, Zhiping and Karniadakis, George Em},
  year = {2021},
