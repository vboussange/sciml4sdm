@article{shin2022,
  title = {Actions to Halt Biodiversity Loss Generally Benefit the Climate},
  author = {Shin, Yunne-Jai and Midgley, Guy F. and Archer, Emma R. M. and Arneth, Almut and Barnes, David K. A. and Chan, Lena and Hashimoto, Shizuka and {Hoegh-Guldberg}, Ove and Insarov, Gregory and Leadley, Paul and Levin, Lisa A. and Ngo, Hien T. and Pandit, Ram and Pires, Aliny P. F. and P{\"o}rtner, Hans-Otto and Rogers, Alex D. and Scholes, Robert J. and Settele, Josef and Smith, Pete},
