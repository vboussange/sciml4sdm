@article{Huey2000,
  title = {Rapid {{Evolution}} of a {{Geographic Cline}} in {{Size}} in an {{Introduced Fly}}},
  author = {Huey, Raymond B.},
  year = {2000},
  month = jan,
  journal = {Science},
  volume = {287},
  number = {5451},
